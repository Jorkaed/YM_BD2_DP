<!DOCTYPE html>
<html lang="es">
<%- include('fragments/dash_head') %>
<body>
    <div class="wrapper">
        <%- include('fragments/dash_sidebar') %>
        <div class="main">
            <%- include('fragments/dash_navbar') %>
            <main class="content px-3 py-4">
                <div class="container-fluid">
                    <div class="mb-3">
                        <h3 class="fw-bold fs-4 mb-3">Yesti Moda Dashboard</h3>
                        <form action="/perfil/imagen" method="POST" enctype="multipart/form-data">
                                <div class="mb-0 p-5 bg-light">
                                    <div class="card" style="background-color: #FFF; color: #000; transition: none; transform: none; cursor: default; border-color: #dee2e6;">
                                        <img src="<%= usuario.imagen %>" class="perfil-img mt-3" alt="Foto del Perfil">
                                        <div class="card-body d-flex align-items-center mb-3 flex-wrap gap-1">
                                            <h3 class="card-title fw-bold"><%= usuario.nombre %> <%= usuario.apellido %></h3>
                                            <button type="button" id="btn-editar-perfil" class="btn btn-dark ms-md-auto">Editar Perfil</button>
                                        </div>
                                        <div class="card-body">
                                            <div class="mb-3" id="bloque-imagen" style="display: none;">
                                                <label for="imagen_perfil" class="form-label"><h5>Cambiar Imagen de Perfil:</h5></label>
                                                <input class="form-control mb-3" type="file" name="imagen_perfil" id="imagen_perfil" accept="image/*" required>
                                                <button type="submit" class="btn btn-primary">Actualizar Imagen</button>
                                            </div>
                                            <div class="mb-3">
                                                <label for="txt_name" class="form-label"><h5>Nombre:</h5></label>
                                                <input class="form-control" type="text" name="txt_name" id="txt_name" value="<%= usuario.nombre %>" disabled>
                                            </div>
                                            <div class="mb-3">
                                                <label for="txt_lastname" class="form-label"><h5>Apellido:</h5></label>
                                                <input class="form-control" type="text" name="txt_lastname" id="txt_lastname" value="<%= usuario.apellido %>" disabled>
                                            </div>
                                            <div class="mb-3">
                                                <label for="txt_email" class="form-label"><h5>Email:</h5></label>
                                                <input class="form-control" type="email" name="txt_email" id="txt_email" value="<%= usuario.correo %>" disabled>
                                            </div>
                                            <div class="mb-3">
                                                <label for="txt_cargo" class="form-label"><h5>Cargo:</h5></label>
                                                <input type="text" class="form-control" name="txt_cargo" id="txt_cargo" value="<%= usuario.cargo %>" disabled>
                                            </div>
                                            <div class="mb-3">
                                                <label for="txt_fecha" class="form-label"><h5>Fecha de Nacimiento:</h5></label>
                                                <input type="date" class="form-control" name="txt_fecha" id="txt_fecha" disabled value="<%= usuario.fecha_nacimiento.substring(0, 10) %>">
                                            </div>
                                        </div>
                                    </div>

                                </div>
                        </form>
                    </div>
                </div>
            </main>
            <%- include('fragments/dash_footer') %>
        </div>
    </div>
<script>
    document.addEventListener('DOMContentLoaded', function () {
        const btnEditar = document.getElementById('btn-editar-perfil');
        const bloqueImagen = document.getElementById('bloque-imagen');

        let visible = false;

        btnEditar.addEventListener('click', () => {
            visible = !visible;

            bloqueImagen.style.display = visible ? 'block' : 'none';
            btnEditar.textContent = visible ? 'Cancelar' : 'Editar Perfil';
            btnEditar.classList.toggle('btn-danger', visible);
            btnEditar.classList.toggle('btn-dark', !visible);
        });
    });
</script>

</body>
</html>