<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title></title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    .table>thead tr {
        color: #fff;
        text-align: left;
    }

    tr.highlight th {
        background-color: #293b5f;
        color: #fff;
    }
  </style>
</head>
<body>
  <h1 class="text-center">Reporte de Inventario</h1>
    <main class="content px-3 py-4">
         <p class="fw-bold">Generado el: <%= new Date().toLocaleString('es-CO') %></p>
        <div class="container-fluid">
            <div class="mb-3">
                <table class="table table-striped text-center">
                    <thead>
                        <tr class="highlight text-center">
                            <th>#</th>
                            <th>Nombre</th>
                            <th>Categoría</th>
                            <th>Subcategoría</th>
                            <th>Talla</th>
                            <th>Color</th>
                            <th>Stock</th>
                            <th>Precio</th>
                            <th>SKU</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% inventario.forEach((item, i) => { %>
                        <tr>
                            <td><%= i + 1 %></td>
                            <td><%= item.nombre %></td>
                            <td><%= item.categoria %></td>
                            <td><%= item.subcategoria %></td>
                            <td><%= item.talla %></td>
                            <td>
                                <span class="color-badge"
                                    style="background-color: <%= item.color %>; width: 20px; height: 20px; display: inline-block; border: 1px solid #ddd; border-radius: 3px;"
                                    title="<%= item.color %>">
                                </span>
                            </td>
                            <td><%= item.stock %></td>
                            <td>$<%= item.precio.toLocaleString('es-CO') %></td>
                            <td><%= item.sku %></td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>   
</body>
</html>
