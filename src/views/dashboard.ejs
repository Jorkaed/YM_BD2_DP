<!DOCTYPE html>
<html lang="es">
<%- include('fragments/dash_head') %>
<body>
    <div class="wrapper">
        <%- include('fragments/dash_sidebar') %>
        <div class="main">
            <%- include('fragments/dash_navbar') %>
            <main class="content px-3 py-4">
                <div class="container-fluid">
                    <div class="mb-3">
                        <h3 class="fw-bold fs-4 mb-3">Yesti Moda Dashboard</h3>
                        <div class="row">
                            <div class="col-12 col-md-4">
                                <div class="card shadow">
                                    <div class="card-body py-4">
                                        <h6 class="mb-2 fw-bold">Cantidad de productos en Stock</h6>
                                        <p class="fw-bold mb-2"><%= cantidadStock %></p>
                                    </div>    
                                </div>   
                            </div>
                            <div class="col-12 col-md-4">
                                <div class="card shadow">
                                    <div class="card-body py-4">
                                        <h6 class="mb-2 fw-bold">Ventas Realizadas En Este Mes</h6>
                                        <p class="fw-bold mb-2"><%= totalVentas %></p>
                                        <div class="mb-0">
                                            <span class="badge text-<%= variacionVentas >= 0 ? 'success' : 'danger' %> me-2">
                                                <%= variacionVentas.toFixed(1) %>%
                                            </span>
                                            <span class="fw-bold">Desde el mes pasado</span>
                                        </div>
                                    </div>    
                                </div>   
                            </div>
                            <div class="col-12 col-md-4">
                                <div class="card shadow">
                                    <div class="card-body py-4">
                                        <h6 class="mb-2 fw-bold">Ingresos En Este Mes</h6>
                                        <p class="fw-bold text-success mb-2">$<%= totalIngresos.toLocaleString('es-CO') %></p>
                                        <div class="mb-0">
                                            <span class="badge text-<%= variacionIngresos >= 0 ? 'success' : 'danger' %> me-2">
                                                <%= variacionIngresos.toFixed(1) %>%
                                            </span>
                                            <span class="fw-bold">Desde el mes pasado</span>
                                        </div>
                                    </div>    
                                </div>   
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12 col-md-7">
                                <h3 class="fw-bold fs-4 my-3">Clientes Frecuentes</h3>
                                <table class="table table-striped">
                                    <thead>
                                        <tr class="highlight">
                                            <th scope="col">#</th>
                                            <th scope="col">Nombre</th>
                                            <th scope="col">Apellido</th>
                                            <th scope="col">Usuario</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% usuariosFrecuentes.forEach((user, index) => { %>
                                            <tr>
                                                <th scope="row"><%= index + 1 %></th>
                                                <td><%= user.nombre %></td>
                                                <td><%= user.apellido %></td>
                                                <td><%= user.correo %></td>
                                            </tr>
                                        <% }); %>
                                    </tbody>
                                </table>
                            </div>
                            <div class="col-12 col-md-5">
                                <h3 class="fw-bold fs-4 my-3">
                                    Grafica de Ventas
                                </h3>
                                <canvas id="line-chart" width="800" height="450"></canvas>
                                <script>
                                    const ventasMesActual = <%- JSON.stringify(ventasMesActual) %>;
                                    const ventasMesPasado = <%- JSON.stringify(ventasMesPasado) %>;
                                </script>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
            <%- include('fragments/dash_footer') %> 
        </div>
    </div>

</body>
</html>